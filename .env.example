# ============================================
# Replypilot Production Environment Variables
# ============================================

# Node Environment
NODE_ENV=production

# Application
PORT=3000
FRONTEND_URL=https://replypilot.dk
API_URL=https://api.replypilot.dk
# Used at frontend build time (Docker: frontend-build service)
VITE_API_BASE_URL=https://api.replypilot.dk

# Database
DATABASE_URL=postgresql://replypilot:secure_password@postgres:5432/replypilot?sslmode=require

# Redis
REDIS_URL=redis://:secure_redis_password@redis:6379/0

# Session
SESSION_SECRET=your-super-secret-session-key-min-32-chars-long

# Stripe (LIVE MODE) - use your own keys, do NOT commit real secrets
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_stripe_price_id

# Twilio (LIVE MODE)
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_MESSAGING_SERVICE_SID=MG_your_messaging_service_sid

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# SendGrid Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=info